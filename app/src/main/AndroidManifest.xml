<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jingbin.cloudreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.jingbin.cloudreader.app.YunyueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:theme="@style/AppThemeSystem.NoActionBar" -->
        <activity
            android:name="com.example.jingbin.cloudreader.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.jingbin.cloudreader.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name="com.example.jingbin.cloudreader.base.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.TestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideScrollViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.ui.one.SlideShadeViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyScollPage" />
        <activity
            android:name="com.example.jingbin.cloudreader.view.viewbigimage.ViewBigImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme" />

    </application>

</manifest>